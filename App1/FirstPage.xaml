<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.FirstPage">
    <StackLayout Spacing="0" HeightRequest="0">
        <StackLayout Orientation="Horizontal" Spacing="0" HeightRequest="150">
            <BoxView Color="Yellow" HorizontalOptions="FillAndExpand"/>
            <BoxView Color="Red" HorizontalOptions="FillAndExpand"/>
            <BoxView Color="Green" HorizontalOptions="FillAndExpand"/>
        </StackLayout>

        <BoxView Color="Black" HorizontalOptions="FillAndExpand" HeightRequest="175"/>

        <StackLayout Orientation="Horizontal" Spacing="0" HeightRequest="175">
            <BoxView Color="Blue" HorizontalOptions="FillAndExpand"/>
            <BoxView Color="LightBlue" HorizontalOptions="FillAndExpand"/>
        </StackLayout>

        <BoxView Color="Red" HorizontalOptions="FillAndExpand" HeightRequest="200"/>
    </StackLayout>

</ContentPage>